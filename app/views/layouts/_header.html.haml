%div.navbar.navbar-inverse
  %div.container
    %div.navbar-header
      = link_to "Ticket sochi.com", root_path, class: "navbar-brand"
    %div.navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li= link_to "All tickets", tickets_path
          %li.navbar-right= link_to "Log out", destroy_user_session_path, method: :delete
        - else
          %li= link_to "Sign in", user_session_path
          %li= link_to "Sign up", new_user_registration_path
        - if current_user && current_user.admin?
          %li= link_to "Events", events_path
          %p.navbar-text ADMIN
          