<div class="container">
  <div class="border-form-div">
    <h2>Sign up</h2>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, :required => true, :autofocus => true, placeholder: "enter e-mail", label: false %>
      <%= f.input :password, :required => true, placeholder: "password", label: false %>
      <%= f.input :password_confirmation, :required => true, placeholder: "again password", label: false %>
      <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>